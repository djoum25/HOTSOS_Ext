<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center">

    <RadioGroup
        android:id="@+id/buildings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        style="@style/ToggleAppTheme">
        <RadioButton
            android:id="@+id/tresor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tresor"
            android:layout_marginBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <RadioButton
            android:id="@+id/sorento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sorento"
            android:layout_marginBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <RadioButton
            android:id="@+id/chateau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chateau"
            android:layout_marginBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <RadioButton
            android:id="@+id/versaille"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Versaille"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
    </RadioGroup>


    <AutoCompleteTextView
        android:id="@+id/room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="20dp"
        android:width="120dp"
        android:gravity="center"
        android:maxLength="5"
        android:maxLines="1"
        android:inputType="number"
        android:hint="Room number"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_add_room_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@android:color/transparent"/>
        <Button
            android:id="@+id/button_add_room_add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</LinearLayout>
